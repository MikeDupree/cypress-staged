{
  "compilerOptions": {
    "removeComments": true,
    "jsx": "react",
    "target": "es2017",
    "lib": [
      "es2015"
    ],
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "bin"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
